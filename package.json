{
  "name": "argus",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot --inspect src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --env disable",
    "fmt": "prettier --write src/**/*.ts",
    "fmt:check": "prettier --check src/**/*.ts",
    "lint": "eslint --cache --fix src/**/*.ts",
    "lint:check": "eslint --cache src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@types/bun": "latest",
    "@types/mustache": "^4.2.6",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "typescript-eslint": "^8.45.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "croner": "^9.1.0",
    "dayjs": "^1.11.18",
    "discord.js": "^14.22.1",
    "fuse.js": "^7.1.0",
    "mongoose": "^8.18.3",
    "mustache": "^4.2.0",
    "pino": "^9.13.0",
    "pino-pretty": "^13.1.1",
    "puppeteer": "^24.23.0"
  }
}
